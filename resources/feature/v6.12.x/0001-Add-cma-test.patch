diff --git a/mm/cma_test.c b/mm/cma_test.c
new file mode 100644
index 000000000000..b92fd89b4291
--- /dev/null
+++ b/mm/cma_test.c
@@ -0,0 +1,77 @@
+#include <linux/module.h>
+#include <linux/mm.h>
+#include <linux/mm_types.h>
+#include <linux/types.h>
+#include <linux/sizes.h>
+#include <linux/cma.h>
+#include <linux/miscdevice.h>
+#include <linux/fs.h>
+
+#define CMA_NAME	"cma_test"
+#define CMA_SIZE	SZ_2G
+#define CMA_TEST_SIZE	SZ_1G
+
+struct cma *cma;
+struct folio *folio;
+
+void cma_test_reserve(void)
+{
+	cma_declare_contiguous_nid(0, CMA_SIZE, 0, PAGE_SIZE, 0, false, CMA_NAME,
+				   &cma, NUMA_NO_NODE);
+}
+
+static int cam_test_open(struct inode *inode, struct file *file)
+{
+	return 0;
+}
+
+static int cam_test_map(struct file *filp, struct vm_area_struct *vma)
+{
+	unsigned long start = vma->vm_start;
+	unsigned long end = vma->vm_end;
+	unsigned long size = end - start;
+
+	if (size > CMA_TEST_SIZE)
+		size = CMA_TEST_SIZE;
+
+	return remap_pfn_range(vma, start, folio_pfn(folio), size, vma->vm_page_prot);
+}
+
+static struct file_operations dev_fops = {
+	.owner  = THIS_MODULE,
+	.open   = cam_test_open,
+	.mmap   = cam_test_map,
+};
+
+static struct miscdevice cma_test_misc = {
+	.minor = MISC_DYNAMIC_MINOR,
+	.name = CMA_NAME,
+	.fops = &dev_fops,
+};
+
+static int __init cma_test_init(void)
+{
+	folio = cma_alloc_folio(cma, get_order(CMA_TEST_SIZE),
+				GFP_KERNEL | __GFP_COMP);
+	if (folio == NULL) {
+		pr_err("alloc memory from CMA is failed.\n");
+		return -ENOMEM;
+	}
+
+	misc_register(&cma_test_misc);
+
+        return 0;
+}
+
+static void __exit cma_test_exit(void)
+{
+	misc_deregister(&cma_test_misc);
+	cma_free_folio(cma, folio);
+}
+
+module_init(cma_test_init);
+module_exit(cma_test_exit);
+
+MODULE_AUTHOR("Vernon Yang <vernon2gm@gmail.com>");
+MODULE_DESCRIPTION("cma test");
+MODULE_LICENSE("GPL v2");
